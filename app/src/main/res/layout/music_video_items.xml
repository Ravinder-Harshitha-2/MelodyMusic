<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- List items to be displayed in a recycler view-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Image view to display song cover -->
        <ImageView
            android:id="@+id/videoImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Text view to display song name -->
            <TextView
                android:id="@+id/videoTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <!-- Button to direct the user towards the youtube music video -->
        <Button
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"
            android:id="@+id/videobutton"
            android:backgroundTint="@color/light_purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch Video"/>

    </LinearLayout>

    <!-- Divider View to make it appear as a line to separate each list item-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="8dp"/>
</LinearLayout>